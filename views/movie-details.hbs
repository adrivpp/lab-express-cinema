<section class="movie-detail">
  <div class="image">
    <img src="{{movie.image}}" alt="{{movie.title}}">
  </div>

  <div class="detail">
    <h2>{{movie.title}}</h2>
    <h3>Director: {{movie.director}}</h3>
    <h4>Stars:</h>
    <ul>
      {{#each movie.stars}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
    <h4>Description:</h4>
    <p>{{movie.description}}</p>
    <p>{{movie.showtimes}}</p>
  </div>
</section>
  
  
  
  
